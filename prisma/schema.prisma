// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialActions"]
}

model File {
  id          String        @id @default(uuid())
  name        String
  directory   Directory     @relation(fields: [directoryId], references: [id], onDelete: Cascade)
  directoryId String
  versions    FileVersion[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  deletedAt   DateTime?

  @@map("files")
}

model FileVersion {
  id        String    @id @default(uuid())
  file      File      @relation(fields: [fileId], references: [id], onDelete: Cascade)
  fileId    String
  name      String
  mimeType  String
  size      Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@map("file_versions")
}

model Directory {
  id          String      @id @default(uuid())
  name        String
  parent      Directory?  @relation(fields: [parentId], references: [id], onDelete: Cascade)
  parentId    String?
  directories Directory[] @relation("DirectoryToDirectory")
  files       File[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  deletedAt   DateTime?

  @@map("directories")
}
